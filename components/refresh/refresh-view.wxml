<!--components/RefreshLayout/refresh-layout.wxml-->
<view style='height:{{dynamicHeight}}rpx;background-color:{{bgColor}}' class="refresh-container">
  <view class='refresh-layout' style='line-height:{{lineHeight}}rpx;height:{{refreshHeight}}rpx;'>
    <view class="refresh-loading" hidden="{{0!=pullState}}"></view>
    <text class="refresh-tips" style='color:{{textColor}}'>{{pullState==1?'下拉可以刷新':pullState==0?'正在刷新数据中...':'松开立即刷新'}}</text>
  </view>
</view>