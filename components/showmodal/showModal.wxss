/* components/popup/popup.wxss */

/* 蒙层 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/* 弹框 */

.modal-dialog {
  font-size: 30rpx;
  width: 560rpx;
  position: fixed;
  top: 30%;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 1500;
  background: #fff;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
}

.m-close{
  position: absolute;
  right: 10rpx;
  top:10rpx;
  width:44rpx;
  line-height: 44rpx;
  border-radius: 5rpx;
  font-size:44rpx;
  color:#999;
}

.m-title {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  align-self: stretch;
  font-size: 36rpx;
}

.m-info {
  /* padding-top: 30rpx; */
  font-size: 24rpx;
  text-align: center;
  color: #888;
  flex: 1;
}

.modal-footer {
  display: flex;
  height: 100rpx;
  border-top: 1rpx solid #e5e5e5;
  margin-top: 30rpx;
}

.modal-footer-empty {
  display: flex;
  margin-top: 30rpx;
}

.btn-footer {
  width: 280rpx;
  font-size: 36rpx;
  color: #02bb00;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-footer-confirm {
  width: 100%;
  font-size: 36rpx;
  color: #02bb00;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-footer-cancel {
  width: 100%;
  font-size: 36rpx;
  color: #02bb00;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-l-footer {
  border-right: 1rpx solid #e5e5e5;
}

.m-i-img {
  width: 240rpx;
  height: 240rpx;
  margin: 0;
}
