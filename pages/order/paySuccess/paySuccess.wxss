@import"../../template/template-recCom.wxss";
icon {
  padding: 20rpx;
  border: 6rpx solid #eb5902;
  margin: 70rpx auto 50rpx;
  border-radius: 100%;
}

.success-wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  padding: 25rpx;
  box-sizing: border-box;
}

.success-wrap>view {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 50rpx;
}

.order-detail {
  padding: 30rpx 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  overflow: hidden;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
}

.order-detail text, .order-detail view {
  padding: 15rpx 0;
  font-size: 28rpx;
  text-align: left;
}

.order-detail navigator {
  display: inline;
  color: #eb5902;
}

.order-detail view {
  font-size: 26rpx;
}

.order-btn {
  display: block;
  width: 150rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1px solid #666;
  margin: 0 auto 15rpx;
  color: #505050;
}

.recommend-product {
  width: 100%;
  height: 60rpx;
  background: #eee;
  position: relative;
}

.recommend-product::before {
  position: absolute;
  left: 10%;
  top: 30rpx;
  content: '';
  width: 80%;
  height: 1px;
  background: #dedddd;
}

.recommend-product::after {
  position: absolute;
  left: 50%;
  top: 0;
  content: '为您推荐';
  width: 150rpx;
  line-height: 60rpx;
  background: #eee;
  color: #999;
  text-align: center;
  margin-left: -75rpx;
}

.productList-wrap {
  width: 100%;
  overflow: hidden;
}

