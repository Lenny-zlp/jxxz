/* pages/order/orderlist/list.wxss */
page{background:#f4f4f4;}
.main {
  padding-top: 20rpx;
  background-color: #f4f4f4;
}

/* 订单状态一行 */

.status_view {
  position: fixed;
  background-color: #f8f8f8;
  width: 100%;
  height: 90rpx;
  overflow: hidden;
  z-index: 2;
  top: 0;
  left: 0;
}

.status_str {
  width: 20%;
  float: left;
  color: #666;
}

.status_str_text {
  position: relative;
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  display: block;
}

.status_str_acrive {
  width: 20%;
  float: left;
  color: #eb5902;
  border-bottom: solid 2px #eb5902;
}

.order_each {
  margin-top: 80rpx;
}

.order_code {
  width: 96%;
  padding: 0 2% 0;
  overflow: hidden;
  line-height: 100rpx;
  border-bottom: 1px solid #f4f4f4;
}

.order_list {
  width: 95%;
  margin: auto;
  overflow: hidden;
  margin-bottom: 20rpx;
  background: #fff;
  height: auto;
  border-radius: 16rpx;
}

/* 订单编号一行 */

.order_code text {
  float: left;
  font-size: 28rpx;
  padding-left: 5rpx;
}

.order_code label {
  float: right;
  color: #eb5902;
  font-size: 28rpx;
  padding-right: 28rpx;
}

/* 仓号一行 */
.order_store {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 2%;
  font-size: 26rpx;
  color: #666;
}

/* 商品信息 */

.order_product {
  position: relative;
  width: 100%;
  overflow: hidden;
  border-bottom: 1px solid #f8f8f8;
}

.order_navigator {
  display: block;
  width: 100%;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  overflow: hidden;
  padding: 30rpx 0 30rpx 24rpx;
}

.product_img_view {
  float: left;
  position: relative;
  
  background: #f4f4f4;
}

.product_img {
  width: 140rpx;
  height: 140rpx;
  display: block;
  border: 0 none;
 
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.image_icon {
  width: 53rpx;
  height: 53rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.image_icon image {
  width: 53rpx;
  height: 53rpx;
}

.collageImg ::before {
  position: absolute;
  left: 3px;
  top: 0;
  width: 20px;
  height: 24px;
  content: "";
  background: url(//cache.jiangxinxiaozhen.com/WD/collage/pin.png) no-repeat center center;
  background-size: 20px 24px;
}

.product_text {
  width: 60%;
  padding: 5rpx 20rpx;
  float: left;
}

.product_text view {
  line-height: 48rpx;
  font-size: 26rpx;
}

.product_text view:nth-child(2) {
  line-height: 40rpx;
  font-size: 22rpx;
  color: #666;
}

.product_qty {
  position: absolute;
  right: 85rpx;
  top: 35%;
  color: #666;
  font-size: 26rpx;
}

.countdown {
  width: 50%;
  float: left;
}

.pay_time {
  padding: 0 10rpx;
  border-radius: 5rpx;
  background: #eb5902;
  color: #eee;
}

.pay_time_str {
  margin-left: 10rpx;
  font-size: 25rpx;
}

.button {
  padding: 20rpx 20rpx;
  overflow: hidden;
  line-height: 50rpx;
}

.del_button {
  width: 150rpx;
  height: 50rpx;
  font-size: 28rpx;
  padding: 10rpx 10rpx;
  line-height: 30rpx;
  background-color: #fff;
  color: #000;
  border: solid 1rpx #000;
  float: right;
  margin-right: 20rpx;
}

.pay_button {
  width: 150rpx;
  height: 50rpx;
  font-size: 28rpx;
  padding: 10rpx 10rpx;
  line-height: 30rpx;
  color: #eb5902;
  border: solid 1px #eb5902;
  background-color: #fff;
  float: right;
  margin-right: 20rpx;
}

navigator.pay_button {
  text-align: center;
  box-sizing: border-box;
  height: 50rpx;
}

.bottom_line {
  padding: 40rpx 0;
  line-height: 30rpx;
  color: #666;
  background: #fff;
  text-align: center;
}

.p_content {
  height: 380rpx;
  font-size: 30rpx;
  color: black;
}

.p_success {
  margin-bottom: 36rpx;
  font-weight: bold;
  font-size: 32rpx;
  color: black;
}

.p_time {
  width: 40rpx;
  height: 40rpx;
  border: solid 1rpx #666;
  border-radius: 40px;
  padding: 1rpx;
  float: left;
  line-height: 35rpx;
}

.p_per {
  margin-top: 120rpx;
  position: absolute;
  left: calc(3%);
  width: 100%;
}

.p_line_l {
  border: solid 1rpx #888;
  width: 60rpx;
  float: left;
  margin-left: 1px;
}

.p_line_r {
  border: solid 1rpx #888;
  width: 60rpx;
  float: left;
}

.p_line_c {
  float: left;
  line-height: 5rpx;
  color: #888;
  margin-left: 6rpx;
  margin-right: 6rpx;
}

.p_btn {
  border: solid 1rpx #eb5902;
  width: 80%;
  margin: 0 auto;
  height: 72rpx;
  line-height: 70rpx;
  background: #eb5902;
  color: #eee;
  border-radius: 40rpx !important;
  font-size: 28rpx;
}
