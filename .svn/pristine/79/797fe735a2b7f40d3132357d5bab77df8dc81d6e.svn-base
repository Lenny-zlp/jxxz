page{background:#eee;}
.main{width:100%;padding-bottom:90rpx;}
.usermesg{width:100%;background:#fff;overflow: hidden;margin-bottom:20rpx; box-sizing: border-box;padding:20rpx 0 20rpx 30rpx;}
.list{width:100%;align-items: center;height:88rpx;padding:0 3% 0 0;border-bottom:1rpx solid #eee;box-sizing: border-box;}
.list label{width:25%;}
.list .inp{width:75%;height:100%; box-sizing: border-box;}
.pickerWrap{background-position:right 0 center!important;padding-right:40rpx;}
.inp input,.pickerWrap view{line-height:88rpx;height:88rpx;}
.giftsWrap{width:100%;padding:30rpx 60rpx 30rpx 30rpx;box-sizing: border-box;height:220rpx;background:#fff; align-items: center;position:relative;}
.giftsWrap image{width:160rpx;height:160rpx;border:1px solid #eee;box-sizing: border-box;margin-right:30rpx;}
.giftsMesg{height:140rpx;width:500rpx;}
.giftNum{width:30rpx;text-align: right;position:absolute;right:30rpx;bottom:40rpx;font-size:30rpx;}
.footer{position:fixed;bottom:0;height:100rpx;background:#fff;border-top:1px solid #eee;width:100%;align-items: center;}
.footer text{margin-left:30rpx;color:#eb5902;}

.giftsMesg text:nth-child(1){width:100%;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}
.giftsMesg text:nth-child(2){width:100%;text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;}

  .yzWord{position:absolute;right:3%;top:14rpx;height:60rpx;padding:0 15rpx;border-radius: 3px !important;box-sizing: border-box;line-height:58rpx;font-size:26rpx;color:#666;z-index: 6;}
  .footer button{width:680rpx;height:80rpx;margin:10rpx auto;background:#eb5902;color:#fff;line-height:80rpx;font-size:30rpx;text-align: center;border-radius: 40rpx !important;}