page {
  background: #eee;
}
.reviews-wrap {
  display: flex;
  flex-direction: column;
}
.reviews-wrap .r-center {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 20rpx;
}
.reviews-wrap .r-center .top {
  display: flex;
  margin-bottom: 22rpx;
}
.reviews-wrap .r-center .top .t_img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 28rpx;
}
.reviews-wrap .r-center .top .t_img .productImg {
  width: 120rpx;
  height: 120rpx;
}
.reviews-wrap .r-center .top .t_font {
  padding-top: 26rpx;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.reviews-wrap .r-center .top .t_font .t_tit {
  font-size: 28rpx;
  height: 48rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.reviews-wrap .r-center .top .t_font .t_spec {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.reviews-wrap .r-center .star-wrap {
  padding: 10rpx 0;
  height: 60rpx;
}
.reviews-wrap .r-center .star-wrap image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 22rpx;
}
.reviews-wrap .txt {
  width: 100%;
  background-color: #fff;
}
.reviews-wrap .txt .reviewText {
  width: 690rpx;
  margin: auto;
  height: 218rpx;
  font-size: 28rpx;
  color: #303030;
  line-height: 14rpx;
  padding: 30rpx;
}
.reviews-wrap .txt .reviewText::placeholder {
  font-size: 28rpx;
  color: #999;
}
.reviews-wrap .reviewImage-wrap {
  width: 100%;
  background-color: #fff;
  padding: 0 20rpx;
}
.reviews-wrap .reviewImage-wrap .imageWrap {
  width: 160rpx;
  height: 160rpx;
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.reviews-wrap .reviewImage-wrap .imageWrap image {
  margin: 10rpx auto;
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #f4f4f4;
  box-sizing: border-box;
}
.reviews-wrap .reviewImage-wrap .imageWrap .clearBtn {
  display: flex;
  position: absolute;
  right: 0;
  top: 0rpx;
  width: 40rpx;
  height: 40rpx;
  background: url('https://cache.jiangxinxiaozhen.com/WD/shop/little/closeImg.png') no-repeat center center;
  background-size: 40rpx;
}
.reviews-wrap .reviewImage-wrap .chooseImgBtn {
  margin: 16rpx 0 16rpx 0rpx;
  width: 160rpx;
  height: 160rpx;
  background: url('https://cache.jiangxinxiaozhen.com/Content/wd/pz.png') no-repeat center center;
  background-size: 100%;
}
.reviews-wrap .reviewImage-wrap .chooseImg {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.reviews-wrap .reviewImage-wrap .chooseImg image {
  display: block;
  width: 160rpx;
  height: 160rpx;
}
.submitBtn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #eb5902;
  color: #fff;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
}
.checkdeWrap {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  left: 0;
}
.cameraBtn {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
}
.cameraBtn button {
  width: 100%;
  margin: 20rpx 0;
}
